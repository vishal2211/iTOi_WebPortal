= form_for @template do |f|
  - if @template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@template.errors.count, "error")} prohibited this template from being saved:"
      %ul
        - @template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :presentation_template_id
    = f.number_field :presentation_template_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :tag_url
    = f.text_field :tag_url
  .field
    = f.label :watermark_url
    = f.text_field :watermark_url
  .field
    = f.label :left_sidebar_url
    = f.text_field :left_sidebar_url
  .field
    = f.label :right_sidebar_url
    = f.text_field :right_sidebar_url
  .actions
    = f.submit 'Save'
