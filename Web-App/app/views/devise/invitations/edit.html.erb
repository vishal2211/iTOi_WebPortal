<div class="account-wrapper">

  <div class="account-body">

    <h3>Welcome to iTOi.</h3>
    <h5>Please set your password to get access.</h5>


<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put }, :class => ['form', 'account-form'] do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

    <div class="form-group">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-secondary btn-block btn-lg' %>
    </div>
<% end %>
