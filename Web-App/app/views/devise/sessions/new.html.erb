<div class="account-wrapper">

  <div class="account-body">

    <h3>Welcome back to iTOi.</h3>
    <h5>Please sign in to get access.</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: ['form', 'account-form']) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, placeholder: 'Your Email', autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control'  %>
      </div>


      <div class="form-group clearfix">
        <div class="pull-left">
          <% if devise_mapping.rememberable? -%>
            <label class="checkbox-inline">
              <%= f.check_box :remember_me %>
              <small>Remember me</small>
            </label>
          <% end -%>
        </div>

        <div class="pull-right">
          <small><%= link_to "Forgot password?", new_password_path(resource_name) %></small>
        </div>
      </div> <!-- /.form-group -->


      <div class="form-group"><%= f.submit "Log In", class: 'btn btn-secondary btn-block btn-lg' %></div>

    <% end %>

  </div>

  <div class="account-footer">
    <p>
    Don't have an account? &nbsp;
    <%= link_to "Create an Account!", new_registration_path(resource_name) %><br />
    </p>
  </div> <!-- /.account-footer -->

</div>


